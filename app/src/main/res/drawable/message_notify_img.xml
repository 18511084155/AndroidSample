<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
    <item android:gravity="left|top" android:drawable="@drawable/notify_icon_rectangle"/>
    <item android:gravity="right" android:drawable="@drawable/notify_icon_shadow"/>
    <item android:gravity="left|top" android:bottom="11dp" android:right="15dp"  android:left="10dp" android:top="11dp" android:drawable="@drawable/message_notify_icon"/>
</layer-list>